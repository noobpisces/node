<div class="post">
    <input type="hidden" value="<%=post._id %>" class="post_id">
    <input type="hidden" value="<%=csrfToken %>" class="csrfToken">
    <div class="user-block">
        <img class="avartar" src="<%= user_query.profilePicture %>" alt="User Image">
        <span class="username"><a href="#">
                <%= user_query.name %>
            </a></span>
        <span class="description">

            <%= post.status %> - <%= post.createdAt %>
        </span>
        <% if (user_query.name==user.name) {%>
            <button class="deletepost">x√≥a post</button>
            <button class="updatepost">update post</button>
            <% } %>
    </div>

    <div class="slider">
        <div class="slides">
            <% for (let i=0; i < post.media.length; i++) { %>
                <div class="img_slide">
                    <img class="slide" src="<%=post.media[i].url%>" alt="Image 1">
                    <span class="num">
                        <%= i + 1 %> / <%=post.media.length%>
                    </span>
                </div>

                <% } %>


        </div>
        <div class="navigation">
            <button class="prev">Prev</button>
            <button class="next">Next</button>
        </div>
    </div>



    <p>
        <%= post.author.name %>: <%= post.content %>
    </p>


    <% if (post.likes.includes(user._id)) { %>
        <button type="button" class="btn-like" id="like-btn-<%=post._id%>"
            onclick="likehaha('<%=post._id%>', 'like-btn-<%=post._id%>','<%= csrfToken %>')"
            style=background-color:blue>
            Liked</button>
        <% } else { %>
            <button type="button" class="btn-like" id="like-btn-<%=post._id%>"
                onclick="likehaha('<%=post._id%>', 'like-btn-<%=post._id%>','<%= csrfToken %>')">
                Like
            </button>
            <% } %>



                <div class="num-like-cmt">
                    <span id="numlike-<%=post._id%>">
                        <%= post.likes.length %> likes -
                    </span>
                    <span id="numcmt">
                        <%= post.comments.length %>
                            comments
                    </span>
                </div>
                <div class="more">more</div>
                <form action="#" method="post" class="box-footer">
                    <img class="avartar" src="<%= user.profilePicture %>" alt="Alt Text">
                    <input type="text" class="post-cmt" placeholder="Press enter to post comment">
                </form>
                <%- include('./modal-post.ejs') %>



</div>