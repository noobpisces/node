<%- include('../info/head.ejs') %>
<link rel="stylesheet" href="/css/signup-form.css">
    </head>

    <body>
        <%- include('../info/navigation.ejs') %>

            <main>
                <% if (errorMessage) { %>
                    <div class="error">
                        <%= errorMessage %>
                    </div>
                    <% } %>
                        <form class="signup-form" action="/signup" method="POST" novalidate>
                            <div class="form-group">
                                <label for="name">Tên người dùng</label>
                                <input class="form-control" name="name" id="name" value="<%= oldInput.name %>" required>
                            </div>
                            <div class="form-group">
                                <label for="email">E-Mail</label>
                                <input class="form-control" type="email" name="email" id="email"
                                    value="<%= oldInput.email %>">
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input class="form-control" type="password" name="password" id="password"
                                    value="<%= oldInput.password %>">
                            </div>
                            <div class="form-group">
                                <label for="confirmPassword">Confirm Password</label>
                                <input class="form-control" type="password" name="confirmPassword" id="confirmPassword"
                                    value="<%= oldInput.confirmPassword %>">
                            </div>
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <button class="btn btn-primary" type="submit">Signup</button>
                        </form>
            </main>
    </body>
    </html>